{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "destructuring": true,
    "modules": true,
    "spread": true
   },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "camelcase": [0],
    "no-loop-func": 0,
    "new-cap": [2, {
      "capIsNew": false,
    }],
    "no-multi-spaces": [2, {
      "exceptions": {
        "VariableDeclarator": true
      }
    }],
    "no-process-exit": 0,
    "no-underscore-dangle": [0],
    "quotes": [2, "single"],
    "strict": 0
  }
}
