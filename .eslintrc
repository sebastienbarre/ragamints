{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "destructuring": true,
    "modules": true,
    "spread": true
   },
  "env": {
    "es6": true,
    "jasmine": true,
    "node": true
  },
  "rules": {
    "camelcase": [0],
    "complexity": [2, 8],
    "max-depth": [1, 3],
    "max-statements": [2, 20],
    "no-else-return": 1,
    "no-loop-func": 0,
    "no-param-reassign": 1,
    "no-warning-comments": 1,
    "new-cap": [2, {
      "capIsNew": false,
    }],
    "no-multi-spaces": [2, {
      "exceptions": {
        "VariableDeclarator": true
      }
    }],
    "no-process-exit": 0,
    "no-underscore-dangle": [0],
    "no-unneeded-ternary": 1,
    "quotes": [2, "single"],
    "radix": 1,
    "strict": 0
  }
}
