{
  "name": "ragamints",
  "version": "0.0.0-semantically-released",
  "description": "Download Instagram photos while preserving caption, photographer name, geolocation, tags, and creation time (w/ timezone) as EXIF, IPTC, and XMP fields.",
  "scripts": {
    "commit": "git-cz",
    "doc:man": "pandoc -M title=\"ragamints(1)\" -f markdown_github -t man -s README.md  > doc/ragamints.1",
    "doc": "mkdirp doc && npm run doc:man",
    "check:lint": "node --harmony node_modules/eslint/bin/eslint.js lib/ragamints.js bin/ragamints spec/ragamints.spec.js",
    "check:jscs": "node --harmony node_modules/jscs/bin/jscs lib/ragamints.js bin/ragamints spec/ragamints.spec.js",
    "check:jsinspect": "node --harmony node_modules/jsinspect/bin/jsinspect -C lib/ragamints.js bin/ragamints spec/ragamints.spec.js",
    "check": "npm run check:lint && npm run check:jscs",
    "test:jasmine": "node --harmony node_modules/jasmine/bin/jasmine.js",
    "test:jasmine-es6": "node --harmony node_modules/jasmine-es6/bin/jasmine.js",
    "test:jasmine-runner": "node --harmony spec/support/jasmine-runner.js",
    "test": "npm run test:jasmine-runner",
    "coverage": "node --harmony node_modules/istanbul/lib/cli.js cover node_modules/jasmine-es6/bin/jasmine.js",
    "coverage:check": "node --harmony node_modules/istanbul/lib/cli.js check-coverage --statements 100 --branches 85 --functions 100 --lines 100",
    "coverage:coveralls:push": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "publish:pre": "npm prune && npm run doc",
    "prepublish": "in-publish && npm run publish:pre || true",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run check && npm run test",
      "pre-push": "npm run coverage && npm run coverage:check",
      "_post-merge": "npm install",
      "_post-rewrite": "npm install"
    }
  },
  "keywords": [
    "instagram",
    "download",
    "backup",
    "exif",
    "iptc",
    "xmp",
    "caption"
  ],
  "author": {
    "name": "Sebastien Barre",
    "email": "sebastien.barre@gmail.com",
    "url": "http://barre.io"
  },
  "bugs": {
    "url": "https://github.com/sebastienbarre/ragamints/issues",
    "email": "sebastien.barre@gmail.com"
  },
  "repository": {
    "url": "https://github.com/sebastienbarre/ragamints.git",
    "type": "git"
  },
  "man": [
    "./doc/ragamints.1"
  ],
  "engines": {
    "node": ">=0.11.x"
  },
  "license": "BSD-3-Clause",
  "preferGlobal": true,
  "bin": "./bin/ragamints",
  "dependencies": {
    "babel": "^5.8.23",
    "chalk": "^1.1.1",
    "commander": "^2.8.1",
    "download": "^4.2.0",
    "es6-promise": "^3.0.2",
    "in-publish": "^2.0.0",
    "instagram-node": "^0.5.8",
    "is-iojs": "^1.1.0",
    "lodash": "^3.10.1",
    "moment-timezone": "^0.4.0",
    "node-fetch": "^1.3.2",
    "object-path": "^0.9.2",
    "sugar": "^1.4.1",
    "suspend": "^0.6.1",
    "tz-lookup": "^6.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "babel-jscs": "^2.0.4",
    "commitizen": "^1.0.4",
    "coveralls": "^2.11.4",
    "cz-conventional-changelog": "^1.1.0",
    "eslint": "^1.5.0",
    "eslint-plugin-smells": "^1.0.1",
    "ghooks": "^0.3.2",
    "istanbul": "git://github.com/gotwarlost/istanbul.git#harmony",
    "jasmine": "^2.3.2",
    "jasmine-es6": "0.0.17",
    "jasmine-spec-reporter": "^2.4.0",
    "jscs": "jscs-dev/node-jscs#master",
    "jscs-jsdoc": "^1.1.0",
    "jsinspect": "^0.7.0",
    "mkdirp": "^0.5.1",
    "rewire": "^2.3.4",
    "semantic-release": "^4.3.5",
    "strip-ansi": "^3.0.0"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  }
}
